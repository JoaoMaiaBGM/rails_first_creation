<h1>STORE</h1>

<hr />

<div>
    <span>
        Para cadastrar um novo produto utilize o link abaixo:
    </span>
    <div>
        <%= link_to "New product", new_product_path if authenticated? %>
    </div>
</div>

<hr />

<div id="products">
    <h3>Products list:</h3>
    <% @products.each do |product| %>

    <div>
        <%= product.id %> ->
        <%= link_to product.name, product %>
        <%= product.description %>
    </div>
    <br>
</div>
<% end %>